                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\09d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="09n">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\03d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="10d">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\10d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="10n">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\10n.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

