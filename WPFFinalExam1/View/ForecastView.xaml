<UserControl x:Class="WPFFinalExam1.View.ForecastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFFinalExam1.View"
             xmlns:con="clr-namespace:WPFFinalExam1.Converter"
             xmlns:vm="clr-namespace:WPFFinalExam1.ViewModel"
             mc:Ignorable="d"
             xmlns:cpb="clr-namespace:CircularProgressBar"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ForecastViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <con:CompassConverter x:Key="Comp" />

        <Style x:Key="EnabledTextBlock" TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="FontSize" Value="30" />
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Setters>
                    <Setter Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="..\Image\Background\03n.jpg" Stretch="UniformToFill" />
                        </Setter.Value>
                    </Setter>

                </Style.Setters>

                <Style.Triggers>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="01d">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\01d.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="01n">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\01n.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="02d">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\02d.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="03d">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\03d.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="03n">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\03n.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="04d">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\04d.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="09d">
                        <DataTrigger.Setters>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="..\Image\Background\09n.jpg" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>

                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Grid Grid.Row="0" Background="#2f2c36">
            <TextBlock Foreground="White" FontSize="17" Text="Forecast" VerticalAlignment="Center" Margin="10"
                       FontWeight="Bold" />
            <StackPanel Background="#2f2c36" Orientation="Horizontal" VerticalAlignment="Top" Height="45"
                        HorizontalAlignment="Right">
                <Button Content="⭮" FontSize="30" Style="{StaticResource MyButtonStyle}" Command="{Binding Refresh}" />
                <Grid HorizontalAlignment="Left" Width="240">
                    <Border VerticalAlignment="Center" Height="39" BorderThickness="1" BorderBrush="#1f1d24"
                            Margin="0,0,4,0">
                        <Grid>
                            <TextBox Margin="3" BorderThickness="0" HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Text="{Binding SearchCity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource SearchTextBoxStyle}" Height="42" Width="193"
                                     x:Name="SearchTextbox" />
                            <Button Margin="0,0,3,0" Background="Transparent" Width="35" Height="38"
                                    HorizontalAlignment="Right" Command="{Binding Search}" Content="&#x1f50e;"
                                    FontSize="20" Style="{StaticResource MyButtonStyle}" />
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>


