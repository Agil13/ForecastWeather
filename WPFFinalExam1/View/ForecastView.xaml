                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\02d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="02n">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\02n.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="03d">
