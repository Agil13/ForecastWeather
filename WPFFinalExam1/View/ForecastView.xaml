                                            </DataTrigger.Setters>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding Weather.Today.Icon}" Value="50n">
                                            <DataTrigger.Setters>
                                                <Setter Property="Source" Value="..\Image\WeatherIcon\50d.png" />
                                            </DataTrigger.Setters>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock x:Name="C" FontSize="50" Foreground="White" VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="True">
                                            <Setter Property="TextBlock.Text"
                                                    Value="{Binding Weather.Today.TempF}" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="False">
                                            <Setter Property="TextBlock.Text" Value="{Binding Weather.Today.TempC}" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="&#176;" FontSize="35" Foreground="White" Margin="0,10" />

                        <StackPanel Margin="10,15">
                            <Button Style="{StaticResource DergeButtonStyle}" BorderThickness="0"
                                    Background="Transparent" Command="{Binding DergeChange}">
                                <TextBlock Style="{StaticResource EnabledTextBlock}" Text="C" />
                            </Button>
                            <Button Style="{StaticResource DergeButtonStyle}" BorderThickness="0"
                                    Background="Transparent" Command="{Binding FarChange}">
                                <TextBlock Style="{StaticResource EnabledTextBlock}" Text="F" />
                            </Button>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="{Binding Weather.Today.Des}" FontSize="30" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Uptade as of" FontSize="15" Margin="7" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Weather.Today.Time, StringFormat=t}" FontSize="15"
                                       FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontSize="15" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="True">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.FeelsLikeF, StringFormat={}Feels Like {0}&#176;}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="False">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.FeelsLikeC, StringFormat={}Feels Like {0}&#176;}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="   Wind" FontSize="15" Foreground="White" />
                            <Separator Opacity="0" Width="5" />
                            <TextBlock Text="&#x27a4;" FontSize="10" Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Canvas.Left="50" Canvas.Top="300" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform
                                        Angle="{Binding Weather.Today.WindDirDegree, Converter= {StaticResource Comp}}" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <Separator Opacity="0" Width="5" />
                            <TextBlock FontSize="15" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="True">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.WindSpeedMiles,StringFormat={}{0} mph}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="False">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.WindSpeedKm, StringFormat={}{0} km/h}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Separator Opacity="0" Width="10" />
                            <TextBlock FontSize="15" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="True">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.VisibilityMiles,StringFormat={}  Visibility {0} mph}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="False">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.Visibility, StringFormat={}  Visibility {0} km/h}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>


                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontSize="15" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="False">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.Barometer, StringFormat={}Barometer {0} mb}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Weather.Today.Derge}" Value="True">
                                                <Setter Property="TextBlock.Text"
                                                        Value="{Binding Weather.Today.BarometerInches, StringFormat={}Barometer {0} in}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="   Humidity" FontSize="15" Foreground="White" />
                            <Separator Opacity="0" Width="5" />
                            <TextBlock Text="{Binding Weather.Today.Humidity}" FontSize="15" Foreground="White" />
                            <TextBlock Text="%" FontSize="15" Foreground="White" />


                        </StackPanel>

                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Daily" FontSize="25" Margin="0,15" Foreground="White" />
                        <ListBox x:Name="DaysForecast" ItemContainerStyle="{StaticResource DailyListItemStyle}"
                                 ScrollViewer.CanContentScroll="False"
                                 Style="{StaticResource HorizontalListBoxStyle}"
                                 ItemsSource="{Binding Weather.Forecast}"
                                 SelectedItem="{Binding Path=DaySelectedItem,Mode=TwoWay}"
                                 SelectedIndex="{Binding DaySelectedIndex}">

                            <ListBox.ItemTemplate>

                                <DataTemplate>
                                    <StackPanel Background="Transparent" Margin="0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Date,StringFormat={}{0:ddd}}" Foreground="White" />
                                            <TextBlock Text="{Binding Date,StringFormat={}{0: d}}" Foreground="White" />
                                        </StackPanel>
                                        <Image HorizontalAlignment="Left" Width="40" Height="40" Margin="0,10">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Icon}" Value="01d">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\01d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="01n">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\01n.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

