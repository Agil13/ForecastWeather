                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\03d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="03n">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\03d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="04d">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\04d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="04n">
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Source"
                                                                        Value="..\Image\WeatherIcon\04d.png" />
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Icon}" Value="09d">
